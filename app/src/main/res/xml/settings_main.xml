<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_menu_item">

    <EditTextPreference
        android:defaultValue="@string/settings_search_query"
        android:inputType="textAutoComplete"
        android:key="@string/settings_search_query_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_search_query_title" />

    <EditTextPreference
        android:defaultValue="@string/settings_list_size_default"
        android:inputType="numberDecimal"
        android:key="@string/settings_list_size_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_list_size_label" />

</PreferenceScreen>